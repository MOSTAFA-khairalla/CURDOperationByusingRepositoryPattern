@model Pet
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>New</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        form{

            margin-left:50px;
            margin-right:50px;
            text-align:center
        }
        
        label{
            font-family:Andalus;
            font-size:30px;
            font-weight:bold;
        }
    </style>
</head>


<body>

    <form asp-action="New" asp-controller="Pet" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="InEditMode" value="@ViewBag.InEditMode"/>
         <div class="form-group">

            <label asp-for="Name"> Name </label>
            <input class="form-control" asp-for="Name" />
        </div>

        <div class="form-group">

            <label asp-for="Age"> Age </label>
            <input class="form-control" asp-for="Age" />
        </div>

        <div class="form-group">

            <label asp-for="Color"> Color </label>
            <input class="form-control" asp-for="Color" />
        </div>
        <div class="form-group">

            <input type="submit"  value=" Save Pet"  class="btn btn-danger"/>
        </div>
    </form>
</body>
</html>
